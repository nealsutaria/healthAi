<!DOCTYPE html>
<html>
  <head>
    <title>Mhbright</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Stimulus + JS -->
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>

    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50 text-gray-900">
    <!-- Navbar -->
    <%= render "layouts/navbar" %>

    <!-- Flash messages -->
    <% if notice.present? %>
      <div class="bg-green-50 border border-green-200 text-green-800 text-center py-3 px-4 text-sm">
        <%= notice %>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="bg-rose-50 border border-rose-200 text-rose-800 text-center py-3 px-4 text-sm">
        <%= alert %>
      </div>
    <% end %>

    <!-- Main content -->
    <main class="container mx-auto px-5 pt-10 pb-20">
      <%= yield %>
    </main>
  </body>
</html>

