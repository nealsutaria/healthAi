<!-- app/views/layouts/_navbar.html.erb -->
<header class="bg-white shadow-sm border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3 sm:gap-0">

      <!-- Logo -->
      <div class="text-center sm:text-left">
        <%= link_to "MHBright",
              user_signed_in? ? authenticated_root_path : unauthenticated_root_path,
              class: "text-2xl font-bold text-indigo-600 hover:text-indigo-700" %>
      </div>

      <!-- Nav Links -->
      <div class="flex flex-wrap justify-center sm:justify-end items-center gap-3 sm:gap-4 text-sm">
        <% if user_signed_in? %>
          <%= link_to "AI Health Chatbot", chat_path, class: "text-indigo-700 underline underline-offset-2 font-medium transition" %>
          <%= link_to "My Records", records_path, class: "text-indigo-700 underline underline-offset-2 font-medium transition" %>
          <%= link_to "âž• New Record", new_record_path, class: "text-white bg-indigo-500 hover:bg-indigo-400 px-4 py-2 rounded-lg shadow-sm font-medium" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete,
                data: { turbo_method: :delete },
                class: "text-red-600 underline underline-offset-2 font-medium transition" %>
        <% else %>
          <%= link_to "Log in", new_user_session_path, class: "text-indigo-700 underline underline-offset-2 font-medium transition" %>
          <%= link_to "Sign up", new_user_registration_path, class: "text-white bg-indigo-600 hover:bg-indigo-500 px-4 py-2 rounded-lg shadow-sm font-medium" %>
        <% end %>
      </div>
    </div>
  </div>
</header>






